<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/img_back_drop"
            android:id="@+id/txt_movie_title"
            android:textSize="36sp"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="24dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_movie_title"
            app:layout_constraintLeft_toRightOf="parent"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:id = "@+id/img_back_drop"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_movie_title"
            app:layout_constraintLeft_toRightOf="@+id/img_back_drop"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_release_date"
            android:textSize="24sp"
            android:textColor="#000000"
            android:padding="1dp"
            android:layout_marginStart="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_release_date"
            app:layout_constraintLeft_toRightOf="@+id/img_back_drop"
            android:id = "@+id/txt_vote_average"
            android:layout_marginLeft="8dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:padding="1dp"
            android:layout_marginStart="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_favorite"
            android:background="@color/colorAccentLight"
            app:layout_constraintTop_toBottomOf="@+id/txt_vote_average"
            app:layout_constraintLeft_toRightOf="@+id/img_back_drop"
            android:padding="2dp"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/fav_text"
            android:textColor="#ffffff"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_back_drop"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_margin="16dp"
            android:id = "@+id/txt_overview"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="1dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_read_review"
            app:layout_constraintLeft_toRightOf="parent"
            android:id="@+id/txt_trailer"
            android:textSize="24sp"
            android:text="Trailers :" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_read_review"
            android:text="@string/read_review_text"
            app:layout_constraintTop_toBottomOf="@+id/txt_overview"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_goneMarginTop="8dp"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="76dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_trailer"
            android:id="@+id/img_button_trailer"
            android:src="@drawable/ic_play_arrow"
            android:scaleType="fitCenter"
            style="@style/Widget.AppCompat.Button"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/img_button_trailer"
            app:layout_constraintTop_toBottomOf="@+id/img_button_trailer"
            app:layout_constraintBottom_toTopOf="@+id/img_button_trailer"
            android:id="@+id/txt_trailer1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Trailer 1"
            android:padding="24dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>